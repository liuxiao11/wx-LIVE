/**index.wxss**/
.search{
  width: 72%;
}
.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.search_arr input{
  margin-left: 70rpx;
  height: 60rpx;
  border-radius: 5px;
}
.bc_text {
  line-height: 68rpx;
  height: 68rpx;
  margin-top: 34rpx;
}
 
.sousuo {
  margin-left: 15rpx;
  line-height: 60rpx;
  text-align: center;
  color: #F5053D;
}
.page_row{
  display: flex;
  flex-direction: row;
  margin: 10rpx 60rpx;
}
.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left:84rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #F5053D;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #F5053D;
}

.pages-container {
  margin-top: 10rpx;
  display: flex;
}
 
.pages-row {
  display: flex;
  flex-direction: row;
  /* justify-content: space-around; */
  height: 200rpx;
  padding-bottom: 10rpx;
  margin-left: 62rpx;
}
 
.pages-item {
  position: relative;
  background-color: #fff;
}
 
.pages-icon-wrapper {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100%;
}
.pages-icon {
  width: 200rpx;
  height: 200rpx;
}
.cont-title{
  display: block;
  margin-left: 30rpx;
  color: rgba(16, 16, 16, 1);
  font-family: Arial;
}
.cont-little{
  color: rgba(158, 158, 158, 1);
  font-size: 32rpx;
  margin-left: 30rpx;
}
.cont-date{
  font-size: 32rpx;
  float: right;
  margin-right: 30rpx;
}
.cont-1{
  margin-bottom: 100rpx;
}

